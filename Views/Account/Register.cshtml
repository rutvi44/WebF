@model RegisterViewModel

@{
    ViewBag.Title = "Register";
}

<form method="post" asp-controller="Account" asp-action="Register">
    <div class="mb-3">
        <label class="form-label" asp-for="Username">Username</label>
        <span class="form-text text-danger" asp-validation-for="Username"></span>
        <input class="form-control" asp-for="Username" type="text" />
    </div>
    
    <div class="mb-3">
        <label class="form-label" asp-for="Password">Password</label>
        <span class="form-text text-danger" asp-validation-for="Password"></span>
        <input class="form-control" asp-for="Password" type="password" />
    </div>
    
    <div class="mb-3">
        <label class="form-label" asp-for="ConfirmPassword">Confirm Password</label>
        <span class="form-text text-danger" asp-validation-for="ConfirmPassword"></span>
        <input class="form-control" asp-for="ConfirmPassword" type="password" />
    </div>
    
    <div class="mb-3">
        <input type="submit" class="btn btn-primary" value="Register" />
    </div>
    
    <div class="mb-3">
        <p>Already registered? <a asp-action="LogIn">Log In</a></p>
    </div>
</form>
