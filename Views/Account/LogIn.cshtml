@model LoginViewModel

@{
    ViewBag.Title = "Login";
}

<form method="post" asp-controller="Account" asp-action="LogIn" asp-route-returnUrl="@Model.ReturnUrl">
    <div class="mb-3">
        <label class="form-label" asp-for="Username">Username</label>
        <span class="form-text text-danger" asp-validation-for="Username"></span>
        <input class="form-control" asp-for="Username" type="text" />
    </div>
    
    <div class="mb-3">
        <label class="form-label" asp-for="Password">Password</label>
        <span class="form-text text-danger" asp-validation-for="Password"></span>
        <input class="form-control" asp-for="Password" type="password" />
    </div>
    
    <div class="mb-3 form-check">
        <input class="form-check-input" type="checkbox" title="Remember Me" asp-for="RememberMe" />
        <label class="form-check-label">Remember Me</label>
    </div>
    
    <div class="mb-3">
        <input type="submit" class="btn btn-primary" value="Login" />
    </div>
    
    <div class="mb-3">
        <p>Not registered? <a asp-controller="Account" asp-action="Register">Register as a new user</a></p>
    </div>
</form>
